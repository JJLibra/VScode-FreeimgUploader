{
  "name": "Freeimg-uploader",
  "displayName": "Freeimg-uploader",
  "description": "Interconnect with the VSCode plug-in of FreeIMG Graph Bed",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.uploadImage"
  ],
  "contributes": {
    "configuration": {
      "title": "Freeimg uploader",
      "properties": {
          "yourExtension.apiUrl": {
              "type": "string",
              "default": "https://www.freeimg.cn/api/v1/upload",
              "description": "API URL for uploading images."
          },
          "yourExtension.apiToken": {
              "type": "string",
              "default": "",
              "description": "Token for authenticating with the image upload API."
          }
        }
      },
      "commands": [{
          "command": "extension.uploadImage",
          "title": "上传图片"
      }],
      "menus": {
          "editor/context": [{
              "when": "resourceLangId == markdown",
              "command": "extension.uploadImage",
              "group": "navigation"
          }]
      }
  },
  "main": "./extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "clipboardy": "^4.0.0",
    "screenshot-desktop": "^1.15.0"
  }
}
